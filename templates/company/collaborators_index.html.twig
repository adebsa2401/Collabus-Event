{% extends "company_dashboard.html.twig" %}

{% block body %}
    <div class="content-body">
        <div class="container-fluid">
            {{ include('partials/_page_title.html.twig', {'titles': {'Mes Collaborateurs': ''}}) }}
            <!-- row -->

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Collaborateurs</h4>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table id="example" class="display" style="min-width: 845px">
                                    {% if collaborators|length > 0 %}
                                        <thead>
                                            <tr>
												<th>#</th>
												<th>Nom</th>
												<th>Prénoms</th>
												<th>Email</th>
												<th>Entreprise</th>
												<th>actions</th>
											</tr>
                                        </thead>
                                        <tbody>
                                            {% for collaborator in collaborators %}
                                                <tr>
                                                    <td>{{ loop.index }}</td>
													<td>{{ collaborator.lastName }}</td>
													<td>{{ collaborator.firstName }}</td>
													<td>{{ collaborator.user.email }}</td>
													<td>{{ collaborator.company.name }}</td>
													<td>
														<a href="{{ path('app_individual_profile_show', {'id': collaborator.id}) }}" data-toggle="tooltip" data-placement="top" title="Consulter">
															<i class="fa fa-eye text-info"></i>
														</a>
                                                        <a data-toggle="modal" data-target="#deletePopup">
                                                            <i class="fa fa-trash text-danger"></i>
                                                        </a>
                                                        {{ include('partials/_delete_popup.html.twig', {'action': path('app_company_remove_collaborator', {'id': collaborator.id})}) }}
													</td>
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                    {% else %}
                                        Aucun Collaborateur n'a été trouvé
                                    {% endif %}
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- #/ row -->
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $('#confirmButton').click(function () {
            window.location.href = $(this).attr('href');
        });
    </script
{% endblock %}
