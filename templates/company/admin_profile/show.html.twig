{% extends "auth_base.html.twig" %}

{% block body %}
	<div class="row">
		<div class="col-md-12 grid-margin stretch-card">
			<div class="card">
				<div class="card-body">
					<p class="card-title">Collaborateurs
						{{ company.name }}</p>
					<a href="{{ path('app_company_add_collaborators', {'id': company.id}) }}" class="btn btn-primary btn-icon-text">
						<i class="btn-icon-prepend ti-plus"></i>
						Ajouter
					</a>
					<div class="row">
						<div class="col-12">
							<div class="table-responsive">
								<table id="example" class="display expandable-table" style="width: 100%">
									<thead>
										<tr>
											<th>#</th>
											<th>Nom</th>
											<th>Prénoms</th>
											<th>Email</th>
											<th>actions</th>
										</tr>
									</thead>
									<tbody>
										{% for collaborator in company.collaborators %}
											<tr>
												<td>{{ loop.index }}</td>
												<td>{{ collaborator.lastName }}</td>
												<td>{{ collaborator.firstName }}</td>
												<td>{{ collaborator.user.email }}</td>
												<td>
													<a href="{{ path('app_individual_profile_show', {'id': collaborator.id}) }}" data-toggle="tooltip" data-placement="top" title="Consulter">
														<i class="mdi mdi-eye text-info"></i>
													</a>
												</td>
											</tr>
										{% else %}
											<tr class="odd">
												<td valign="top" colspan="8" class="dataTables_empty">Aucun Collaborateur n'a été trouvé</td>
											</tr>
										{% endfor %}
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
