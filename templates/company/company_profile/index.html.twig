{% extends "company_dashboard.html.twig" %}

{% block body %}
    <div class="content-body">
        <div class="container-fluid">
            {{ include('partials/_page_title.html.twig', {'titles': {'Mes Entreprises': ''}}) }}
            <!-- row -->

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Mes Entreprises</h4>
                            <a href="{{ path('app_company_new') }}" class="btn btn-primary">Ajouter <span
                                class="btn-icon-right"><i class="fa fa-plus"></i></span>
                            </a>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table id="example" class="display" style="min-width: 845px">
                                    {% if companies|length > 0 %}
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>Nom</th>
                                                <th>Secteur d'activité</th>
                                                <th>Collaborators</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for company in companies %}
                                                <tr>
                                                    <td>{{ loop.index }}</td>
                                                    <td>{{ company.name }}</td>
                                                    <td>{{ company.activityAreas|map(a => a.name)|join(' - ') }}</td>
                                                    <td>{{ company.collaborators|length }}</td>
                                                    <td>
                                                        <a href="{{ path('app_company_show', {'id': company.id}) }}" data-toggle="tooltip" data-placement="top" title="Consulter">
                                                            <i class="fa fa-eye text-info"></i>
                                                        </a>
                                                        <a href="{{ path('app_company_edit', {'id': company.id}) }}" data-toggle="tooltip" data-placement="top" title="Modifier">
                                                            <i class="fa fa-edit text-success"></i>
                                                        </a>
                                                        <a data-toggle="modal" data-target="#deletePopup">
                                                            <i class="fa fa-trash text-danger"></i>
                                                        </a>
                                                        {{ include('partials/_delete_popup.html.twig', {'action': path('app_company_delete', {'id': company.id})}) }}
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                    {% else %}
                                        Aucune entreprise n'a été trouvée
                                    {% endif %}
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- #/ row -->
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $('#confirmButton').click(function () {
            window.location.href = $(this).attr('href');
        });
    </script
{% endblock %}
