{% extends "auth_base.html.twig" %}

{% block body %}
	<div class="row">
		<div class="col-md-12 grid-margin stretch-card">
			<div class="card">
				<div class="card-body">
					<p class="card-title">Points de rencontre</p>
					<a href="{{ path('app_place_new') }}" class="btn btn-primary btn-icon-text">
						<i class="btn-icon-prepend ti-plus"></i>
						Ajouter
					</a>
					<div class="row">
						<div class="col-12">
							<div class="table-responsive">
								<table id="example" class="display expandable-table" style="width: 100%">
									<thead>
										<tr>
											<th>#</th>
											<th>Name</th>
											<th>Places (debout)</th>
											<th>Places (assis)</th>
											<th>Places (total)</th>
											<th>Evènements</th>
											<th>actions</th>
										</tr>
									</thead>
									<tbody>
										{% for place in places %}
											<tr>
												<td>{{ loop.index }}</td>
												<td>{{ place.name }}</td>
												<td>{{ place.standCount|number_format }}</td>
												<td>{{ place.sitCount|number_format }}</td>
												<td>{{ (place.standCount + place.sitCount)|number_format }}</td>
												<td>{{ place.events|length }}</td>
												<td>
													<a href="{{ path('app_place_show', {'id': place.id}) }}" data-toggle="tooltip" data-placement="top" title="Consulter">
														<i class="mdi mdi-eye text-info"></i>
													</a>
													<a href="{{ path('app_place_edit', {'id': place.id}) }}" data-toggle="tooltip" data-placement="top" title="Modifier">
														<i class="mdi mdi-pencil text-success"></i>
													</a>
													<a href="{{ path('app_place_delete', {'id': place.id}) }}" data-toggle="tooltip" data-placement="top" title="Supprimer">
														<i class="mdi mdi-delete text-danger"></i>
													</a>
												</td>
											</tr>
										{% else %}
											<tr class="odd">
												<td valign="top" colspan="8" class="dataTables_empty">Aucun point de rencontre n'a été trouvé</td>
											</tr>
										{% endfor %}
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
