<div class="content-body">
    <div class="container-fluid">
        {{ include('partials/_page_title.html.twig', {'titles': {'Evènements': path('app_event_index'), 'Ajouter un évènement': ''}}) }}
        <!-- row -->
        <div class="row">
            <div class="col-xl-6 col-xxl-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Ajouter un évènement</h4>
                    </div>
                    <div class="card-body">
                        <div class="basic-form">
                            {{ form_start(form) }}
                                <div class="row">
                                    <div class="col-sm-6">
                                        {{ form_label(form.name, 'Nom', {'label_attr': {'class': 'form-label'}}) }}  
                                        {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Nom de l\'évènement'}}) }}
                                    </div>

                                    <div class="col-sm-6">
                                        {{ form_label(form.type, 'Type', {'label_attr': {'class': 'form-label'}}) }}  
                                        {{ form_widget(form.type, {'attr': {'class': 'disabling-options'}}) }}
                                    </div>

                                    <div class="col-sm-6">
                                        {{ form_label(form.place, 'Lieu', {'label_attr': {'class': 'form-label'}}) }}  
                                        {{ form_widget(form.place, {'attr': {'class': 'disabling-options'}}) }}
                                    </div>

                                    <div class="col-sm-6">
                                        {{ form_label(form.startedAt, 'Démarre le', {'label_attr': {'class': 'form-label'}}) }}  
                                        {{ form_widget(form.startedAt, {'attr': {'class': 'form-control'}}) }}
                                    </div>

                                    <div class="col-sm-6">
                                        {{ form_label(form.endedAt, 'Fini le', {'label_attr': {'class': 'form-label'}}) }}  
                                        {{ form_widget(form.endedAt, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary mt-3">{{ submit_label ?? 'Enregistrer' }}</button>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- #/ row --> 
    </div>
</div>
