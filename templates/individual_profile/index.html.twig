{% extends "auth_base.html.twig" %}

{% block body %}
	<div class="row">
		<div class="col-md-12 grid-margin stretch-card">
			<div class="card">
				<div class="card-body">
					<p class="card-title">Utilisateurs - Particuliers</p>
					<div class="row">
						<div class="col-12">
							<div class="table-responsive">
								<table id="example" class="display expandable-table" style="width: 100%">
									<thead>
										<tr>
											<th>#</th>
											<th>Nom</th>
											<th>Prénoms</th>
											<th>Email</th>
											<th>Verifié</th>
											<th>actions</th>
										</tr>
									</thead>
									<tbody>
										{% for individual_profile in individual_profiles %}
											<tr>
												<td>{{ loop.index }}</td>
												<td>{{ individual_profile.lastName }}</td>
												<td>{{ individual_profile.firstName }}</td>
												<td>{{ individual_profile.user.email }}</td>
												<td>{{ individual_profile.user.isVerified ? 'Oui' : 'Non' }}</td>
												<td>
													<a href="{{ path('app_individual_profile_show', {'id': individual_profile.id}) }}" data-toggle="tooltip" data-placement="top" title="Consulter">
														<i class="fa fa-eye text-info"></i>
													</a>
												</td>
											</tr>
										{% else %}
											<tr class="odd">
												<td valign="top" colspan="8" class="dataTables_empty">Aucun compte particulier n'a été trouvé</td>
											</tr>
										{% endfor %}
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
